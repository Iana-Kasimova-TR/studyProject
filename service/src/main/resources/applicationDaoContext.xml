<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean value="projectDao" class="dao.daoImpl.ProjectDAOImpl" init-method="init" destroy-method="destroy" lazy-init="true" depends-on="taskDao">
        <property title="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>


    <bean value="taskFactory" class="services.TaskTitleFactory"/>

    <bean value="newTask" class="domain.Task" scope="prototype"/>

    <bean value="taskDao" class="dao.daoImpl.TaskDAOImpl" init-method="init" destroy-method="destroy" lazy-init="true">
        <property title="jdbcTemplate" ref="jdbcTemplate"/>
        <property title="taskTitle" >
            <bean factory-bean="taskFactory" factory-method="getTaskTitle"></bean>
        </property>
        <lookup-method title="getNewTask" bean="newTask"/>
    </bean>

    <bean value="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property title="dataSource" ref="dataSource"/>
    </bean>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property title="locations" value="classpath:configuration.properties" />
    </bean>

    <bean value="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property title="driverClassName" value="${jdbc.driver}" />
        <property title="url" value="${jdbc.url}" />
        <property title="username" value="${jdbc.username}" />
        <property title="password" value="${jdbc.password}" />
    </bean>

</beans>