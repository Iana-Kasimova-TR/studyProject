<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd" default-lazy-init="true">


    <bean id="dailyAgendaService"    class="services.DailyAgendaServiceImpl">
        <property name="taskDAO" ref="taskDao"/>
    </bean>

    <bean id="dailyNotificationGroupService"    class="services.DailyNotificationGroupServiceImpl">
        <property name="taskDAO" ref="taskDao"/>
    </bean>

    <bean id="projectService"    class="services.ProjectServiceImpl">
        <property name="projectDAO" ref="projectDao"/>
    </bean>

    <bean id="taskService"    class="services.TaskServiceImpl">
        <property name="taskDAO" ref="taskDao"/>
        <property name="projectService" ref="projectService"/>
    </bean>


</beans>
